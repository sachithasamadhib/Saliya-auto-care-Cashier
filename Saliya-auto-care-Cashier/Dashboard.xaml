                        </TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                        <Button Foreground="{DynamicResource MaterialDesignBody}"  Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatButton}" Margin="4" VerticalAlignment="Center" Click="Button_Click">
                            Yes
                        </Button>
                        <Button Foreground="{DynamicResource MaterialDesignBody}"  Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatButton}" Margin="4" VerticalAlignment="Center">
                            No
                        </Button>
                    </StackPanel>
                </Grid>
            </materialDesign:DialogHost.DialogContent>  -->
            <Grid>
                <!--The message box of Loyality Unlock-->
                <materialDesign:DialogHost x:Name="MemberDialogHost" BorderBrush="{DynamicResource MaterialDesignDivider}">
                    <materialDesign:DialogHost.DialogContent>
                        <Grid Width="550" Height="350" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <Border BorderBrush="LightBlue" BorderThickness="5,5,5,5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.5*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <StackPanel Margin="25,20,0,0" HorizontalAlignment="Left">
                                            <Image Source="/Images/loyal.PNG" Width="120" />
                                        </StackPanel>
                                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,35,0">
                                            <TextBlock Text="Welcome to Loyalty Unlock" FontSize="17" Foreground="Black" FontWeight="Bold"/>
                                        </StackPanel>
                                        <Rectangle Fill="Red" Height="2" Opacity="0.5" VerticalAlignment="Bottom" Margin="20,00,20,0"/>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <StackPanel HorizontalAlignment="Left" Margin="50,20,0,0">
                                            <TextBlock Text="Example: 1234567 " FontSize="15"/>
                                        </StackPanel>
                                        <StackPanel HorizontalAlignment="Right" Margin="0,25,-20,0">
                                            <TextBlock x:Name="IDError" TextWrapping="Wrap" Text="" Width="260" Height="27" TextAlignment="Center" Foreground="Red"/>
                                        </StackPanel>
                                        <StackPanel HorizontalAlignment="Right" Margin="0,25,0,0">
                                            <TextBlock x:Name="Cusname" TextWrapping="Wrap" Text="" Width="260" Height="40" TextAlignment="Center" Foreground="Green"/>
                                        </StackPanel>
                                        <StackPanel HorizontalAlignment="Left" Margin="70,70,0,0">
                                            <TextBox x:Name="txtloyalid" 
                                                     TextChanged="txtloyalid_TextChanged" 
                                                     Width="400" 
                                                     Height="65"
                                                     FontSize="19" 
                                                     materialDesign:HintAssist.Hint="Enter The Vehicle Number" 
                                                     BorderThickness="2" 
                                                     BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                     Style="{StaticResource MaterialDesignOutlinedTextBox}">
                                                <TextBox.Triggers>
                                                    <EventTrigger RoutedEvent="TextBox.GotFocus">
                                                        <BeginStoryboard Storyboard="{StaticResource ShakeAnimation}"/>
                                                    </EventTrigger>
                                                </TextBox.Triggers>
                                            </TextBox>
                                        </StackPanel>
                                        <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,15" Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Foreground="Green" Style="{DynamicResource MaterialDesignFlatButton}" Margin="0,0,135,0" Click="addbtn_click" FontSize="18" >
                                                Add
                                            </Button>
                                            <Button Foreground="Red"  Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatButton}" Click="addbtn_cancel" FontSize="18">
                                                Go Back
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </materialDesign:DialogHost.DialogContent>
                    <Grid>
                        <!--Schedule Pickup message box-->
                        <materialDesign:DialogHost x:Name="SchedulePickupDialogHost" BorderBrush="{DynamicResource MaterialDesignDivider}">
                            <materialDesign:DialogHost.DialogContent>
                                <Grid Width="700" Height="400"  HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Border BorderBrush="LightBlue" BorderThickness="5,5,5,5" >
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="60"/>
                                                <RowDefinition Height="200"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,20,0,0">
                                                <TextBlock Text="Schedule A Pickup" FontSize="18" Foreground="Black" FontWeight="Bold"/>
                                            </StackPanel>
                                            <Button Margin="0,20,40,0" Background="#509ea3" Width="160" Height="38" Foreground="White" FontSize="15" FontWeight="Bold" Click="btn_availability" HorizontalAlignment="Right">
                                                Check Availability
                                            </Button>
                                                <Grid Grid.Row="1" Margin="0,0,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox x:Name="txtcusname" 
                                                         Margin="0,-35,0,0"
                                                         Width="300" 
                                                         Height="60"
                                                         FontSize="17.5" 
                                                         materialDesign:HintAssist.Hint="Enter The Customer Name" 
                                                         BorderThickness="2" 
                                                         BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                         Style="{StaticResource MaterialDesignOutlinedTextBox}">
                                                            <TextBox.Triggers>
                                                                <EventTrigger RoutedEvent="TextBox.GotFocus">
                                                                    <BeginStoryboard Storyboard="{StaticResource ShakeAnimation}"/>
                                                                </EventTrigger>
                                                            </TextBox.Triggers>
                                                </TextBox>

                                                <TextBox Grid.Column="1"
                                                         x:Name="txtcusmobile" 
                                                         Margin="0,-35,0,0"
                                                         Width="300" 
                                                         Height="60"
                                                         FontSize="17.5" 
                                                         materialDesign:HintAssist.Hint="Enter The Mobile Number" 
                                                         BorderThickness="2" 
                                                         BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                         Style="{StaticResource MaterialDesignOutlinedTextBox}">
                                                    <TextBox.Triggers>
                                                        <EventTrigger RoutedEvent="TextBox.GotFocus">
                                                            <BeginStoryboard Storyboard="{StaticResource ShakeAnimation}"/>
                                                        </EventTrigger>
                                                    </TextBox.Triggers>
                                                </TextBox>
                                                <ComboBox VerticalAlignment="Bottom"
                                                          x:Name="cmbdrivername" 
                                                          Margin="0,0,0,-10"
                                                          Width="300" 
                                                          Height="60"
                                                          FontSize="17.5" 
                                                          materialDesign:HintAssist.Hint="Select A Driver" 
                                                          BorderThickness="2" 
                                                          BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                          Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                                    <ComboBox.Triggers>
                                                        <EventTrigger RoutedEvent="ComboBox.GotFocus">
                                                            <BeginStoryboard Storyboard="{StaticResource ShakeAnimation}"/>
                                                        </EventTrigger>
                                                    </ComboBox.Triggers>
                                                </ComboBox>

                                                <ComboBox VerticalAlignment="Bottom" Grid.Column="1"
                                                          x:Name="cmbcarriername" 
                                                          Width="300" 
                                                          Margin="0,0,0,-10"
                                                          Height="60"
                                                          FontSize="17.5" 
                                                          materialDesign:HintAssist.Hint="Select A Carrier" 
                                                          BorderThickness="2" 
                                                          BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                          Style="{StaticResource MaterialDesignOutlinedComboBox}">
                                                    <ComboBox.Triggers>
                                                        <EventTrigger RoutedEvent="ComboBox.GotFocus">
                                                            <BeginStoryboard Storyboard="{StaticResource ShakeAnimation}"/>
                                                        </EventTrigger>
                                                    </ComboBox.Triggers>
                                                </ComboBox>

                                            </Grid>
                                            <Grid Grid.Row="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Button Foreground="{DynamicResource MaterialDesignBody}" Style="{DynamicResource MaterialDesignFlatButton}" Margin="0,0,-50,0" FontWeight="Bold" FontSize="17" Width="120" Height="40" Click="ButtonSchedule_click">
                                                    Schedule
                                                </Button>
                                                <Button Grid.Column="1" Foreground="{DynamicResource MaterialDesignBody}"  Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatButton}" FontWeight="Bold" FontSize="17" Margin="-100,0,0,0" Height="40" Width="100" Click="goback">
                                                    Go Back
                                                </Button>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </materialDesign:DialogHost.DialogContent>
                            <Grid>
                                <!--Clear All message box for menu-->
                                <materialDesign:DialogHost x:Name="ClearAllDialogHost" BorderBrush="{DynamicResource MaterialDesignDivider}">
                                    <materialDesign:DialogHost.DialogContent>
                                        <Grid Width="350" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" Margin="15">
                                                <materialDesign:PackIcon Kind="InfoCircle" Foreground="{StaticResource PrimaryHueMidBrush}" Width="60" Height="60" Margin="0,10,0,0" />
                                                <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Width="230"  Margin="15,15,0,0" TextWrapping="Wrap" FontSize="18">
                                                           Do you want to clear all? This action can't be undone.
                                                </TextBlock>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                                                <Button Foreground="{DynamicResource MaterialDesignBody}"  Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatButton}" Margin="4" VerticalAlignment="Center" Click="Buttondashboardclear_Click">
                                                    Yes
                                                </Button>
                                                <Button Foreground="{DynamicResource MaterialDesignBody}"  Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatButton}" Margin="4" VerticalAlignment="Center">
                                                    No
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </materialDesign:DialogHost.DialogContent>
                                    <Grid>
                                        <!--Clear All message box for Hisroty View-->
                                        <materialDesign:DialogHost x:Name="ClearAllDialogHostforhistory" BorderBrush="{DynamicResource MaterialDesignDivider}">
                                            <materialDesign:DialogHost.DialogContent>
                                                <Grid Width="350" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <StackPanel Orientation="Horizontal" Margin="15">
                                                        <materialDesign:PackIcon Kind="InfoCircle" Foreground="{StaticResource PrimaryHueMidBrush}" Width="60" Height="60" Margin="0,10,0,0"/>
                                                        <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Width="230" Margin="15,15,0,0" TextWrapping="Wrap" FontSize="18">
                                                           Do you want to clear all? This action can't be undone.
                                                        </TextBlock>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                                                        <Button Foreground="{DynamicResource MaterialDesignBody}"  Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatButton}" Margin="4" VerticalAlignment="Center" Click="Buttonhistoryclear_Click">
                                                            Yes
                                                        </Button>
                                                        <Button Foreground="{DynamicResource MaterialDesignBody}"  Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatButton}" Margin="4" VerticalAlignment="Center">
                                                            No
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </materialDesign:DialogHost.DialogContent>
                                            <Grid>
                                                <!--Clear All message box for Register View-->
                                                <materialDesign:DialogHost x:Name="ClearRegisterDialogHost" BorderBrush="{DynamicResource MaterialDesignDivider}">
                                                    <materialDesign:DialogHost.DialogContent>
                                                        <Grid Width="350" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <StackPanel Orientation="Horizontal" Margin="15">
                                                                <materialDesign:PackIcon Kind="InfoCircle" Foreground="{StaticResource PrimaryHueMidBrush}" Width="60" Height="60" Margin="0,10,0,0"/>
                                                                <TextBlock Foreground="{DynamicResource MaterialDesignBody}" Width="230" Margin="15,15,0,0" TextWrapping="Wrap" FontSize="18">
                                                                                          Do you want to clear all? This action can't be undone.
                                                                </TextBlock>
                                                            </StackPanel>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                                                                <Button Foreground="{DynamicResource MaterialDesignBody}"  Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatButton}" Margin="4" VerticalAlignment="Center" Click="ButtonRegisterclear_Click">
                                                                    Yes
                                                                </Button>
                                                                <Button Foreground="{DynamicResource MaterialDesignBody}"  Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatButton}" Margin="4" VerticalAlignment="Center">
                                                                    No
                                                                </Button>
                                                            </StackPanel>
                                                        </Grid>
                                                    </materialDesign:DialogHost.DialogContent>
                                                    <Grid>
                                                        <!--Message box for Custom Button-->
                                                       <materialDesign:DialogHost x:Name="CustomButtonDialogHost" BorderBrush="{DynamicResource MaterialDesignDivider}">
                                                            <materialDesign:DialogHost.DialogContent>
                                                                <Grid Width="500" Height="550" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
                                                                    <Grid>
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition Height="Auto"/>
                                                                            <RowDefinition Height="*"/>
                                                                        </Grid.RowDefinitions>
                                                                        
                                                                        <Grid Background="LightBlue">
                                                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,5">
                                                                                <Grid>
                                                                                    <Grid.RowDefinitions>
                                                                                        <RowDefinition Height="Auto"/>
                                                                                    </Grid.RowDefinitions>
                                                                                    <TextBlock Text="Add Custom Item " FontSize="25" Foreground="Black" FontWeight="Bold"/>
                                                                                </Grid>
                                                                            </StackPanel>
                                                                        </Grid>

                                                                        <!-- Content Section -->
                                                                        <materialDesign:Card 
                                                                                            Grid.Row="1" 
                                                                                            UniformCornerRadius="15" 
                                                                                            Background="{DynamicResource MaterialDesignPaper}" 
                                                                                            Margin="5" 
                                                                                            materialDesign:ShadowAssist.ShadowDepth="Depth3">
                                                                            <Grid>
                                                                                <Grid.RowDefinitions>
                                                                                    <RowDefinition Height="Auto"/>
                                                                                    <RowDefinition Height="Auto"/>
                                                                                    <RowDefinition Height="Auto"/>
                                                                                    <RowDefinition Height="Auto"/>
                                                                                </Grid.RowDefinitions>

                                                                                <TextBox x:Name="txtdiscription" 
                                                                                         Width="300" 
                                                                                         Height="65" 
                                                                                         FontSize="16" 
                                                                                         Margin="26,50,26,10"
                                                                                         materialDesign:HintAssist.Hint="Enter The Description" 
                                                                                         HorizontalAlignment="Center"
                                                                                         BorderThickness="2" 
                                                                                         BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                                                         Grid.Row="0">
                                                                                    <TextBox.Triggers>
                                                                                        <EventTrigger RoutedEvent="TextBox.GotFocus">
                                                                                            <BeginStoryboard Storyboard="{StaticResource ShakeAnimation}"/>
                                                                                        </EventTrigger>
                                                                                    </TextBox.Triggers>
                                                                                </TextBox>

                                                                                <TextBox x:Name="txtqty" 
                                                                                         Width="300" 
                                                                                         Height="65" 
                                                                                         FontSize="16" 
                                                                                         Margin="26,25,26,10"
                                                                                         materialDesign:HintAssist.Hint="Enter Quantity" 
                                                                                         HorizontalAlignment="Center"
                                                                                         BorderThickness="2" 
                                                                                         BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                                                         Grid.Row="1">
                                                                                    <TextBox.Triggers>
                                                                                        <EventTrigger RoutedEvent="TextBox.GotFocus">
                                                                                            <BeginStoryboard Storyboard="{StaticResource ShakeAnimation}"/>
                                                                                        </EventTrigger>
                                                                                    </TextBox.Triggers>
                                                                                </TextBox>

                                                                                <TextBox x:Name="txtprice" 
                                                                                         Width="300" 
                                                                                         Height="65" 
                                                                                         FontSize="16" 
                                                                                         Margin="26,25,26,10"
                                                                                         materialDesign:HintAssist.Hint="Enter Price" 
                                                                                         HorizontalAlignment="Center"
                                                                                         BorderThickness="2" 
                                                                                         BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                                                         Grid.Row="2">
                                                                                    <TextBox.Triggers>
                                                                                        <EventTrigger RoutedEvent="TextBox.GotFocus">
                                                                                            <BeginStoryboard Storyboard="{StaticResource ShakeAnimation}"/>
                                                                                        </EventTrigger>
                                                                                    </TextBox.Triggers>
                                                                                </TextBox>

                                                                                <Button HorizontalAlignment="Center" 
                                                                                        VerticalAlignment="Bottom" 
                                                                                        Margin="0,40,0,10" 
                                                                                        Background="#009688" 
                                                                                        BorderBrush="#009688" 
                                                                                        Width="80" 
                                                                                        Height="50" 
                                                                                        x:Name="barcode" 
                                                                                        Click="addButton_Click" 
                                                                                        Grid.Row="3" 
                                                                                        Content="Add"/>
                                                                            </Grid>
                                                                        </materialDesign:Card>


                                                                        <!-- Back Button -->
                                                                        <Button 
                                                                                        x:Name="backbutton"  
                                                                                        Background="Transparent" 
                                                                                        BorderBrush="Transparent" 
                                                                                        Height="100" 
                                                                                        Width="120" 
                                                                                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" 
                                                                                        Margin="0" 
                                                                                        Grid.Row="1" 
                                                                                        HorizontalAlignment="Left" 
                                                                                        VerticalAlignment="Bottom" 
                                                                                        Click="BackButton_Click">
                                                                            <Image Source="/Images/Back.png" Width="70" Height="70" Cursor="Hand"/>
                                                                        </Button>


                                                                        
                                                                    </Grid>
                                                                </Grid>
                                                            </materialDesign:DialogHost.DialogContent>
                                                            <Grid>
                                                                <!--Message box for Refund Button-->
                                                                <materialDesign:DialogHost x:Name="RefundButtonDialogHost" BorderBrush="{DynamicResource MaterialDesignDivider}">
                                                                    <materialDesign:DialogHost.DialogContent>
                                                                        <Grid Width="910" Height="550" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
                                                                            <Grid>
                                                                                <Grid.RowDefinitions>
                                                                                    <RowDefinition Height="Auto"/>
                                                                                    <RowDefinition Height="*"/>
                                                                                </Grid.RowDefinitions>

                                                                                <!-- Header Section -->
                                                                                <Grid Background="LightBlue">
                                                                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,5">
                                                                                        <Grid>
                                                                                            <Grid.RowDefinitions>
                                                                                                <RowDefinition Height="Auto"/>
                                                                                            </Grid.RowDefinitions>
                                                                                            <TextBlock Text="Refund" FontSize="25" Foreground="Black" FontWeight="Bold"/>
                                                                                        </Grid>
                                                                                    </StackPanel>
                                                                                </Grid>

                                                                                <!-- Content Section -->
                                                                                <materialDesign:Card 
                                                                                                Grid.Row="1" 
                                                                                                UniformCornerRadius="15" 
                                                                                                Background="{DynamicResource MaterialDesignPaper}" 
                                                                                                Margin="5" 
                                                                                                materialDesign:ShadowAssist.ShadowDepth="Depth3">
                                                                                    <Grid>
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                        </Grid.ColumnDefinitions>

                                                                                        <!-- Left Column -->
                                                                                        <Grid>
                                                                                            <Grid.RowDefinitions>
                                                                                                <RowDefinition/>
                                                                                                <RowDefinition/>
                                                                                                <RowDefinition/>
                                                                                            </Grid.RowDefinitions>

                                                                                            <!-- Invoice Number Input -->
                                                                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="30,30,0,10">
                                                                                                <TextBlock 
                                                                                                    Text="Invoice Number:" 
                                                                                                    FontSize="17" 
                                                                                                    FontWeight="SemiBold" 
                                                                                                    VerticalAlignment="Center" 
                                                                                                    Margin="0,0,10,0"/>

                                                                                               <TextBox  x:Name="txtInvoiceNum" 
                                                                                                        Width="225" 
                                                                                                        Height="60" 
                                                                                                        FontSize="16" 
                                                                                                        materialDesign:HintAssist.Hint="Enter The Invoice Number" 
                                                                                                        BorderThickness="2" 
                                                                                                        BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                                                                                        Style="{StaticResource MaterialDesignOutlinedTextBox}">
                                                                                                    <TextBox.Triggers>
                                                                                                        <EventTrigger RoutedEvent="TextBox.GotFocus">
                                                                                                            <BeginStoryboard Storyboard="{StaticResource ShakeAnimation}"/>
                                                                                                        </EventTrigger>
                                                                                                    </TextBox.Triggers>
                                                                                               </TextBox>
                                                                                            </StackPanel>

                                                                                            <!-- Search Button -->
                                                                                            <Button 
                                                                                                    Width="100" 
                                                                                                    Height="40"  
                                                                                                    Margin="250,100,10,0" 
                                                                                                    Content="Search" 
                                                                                                    HorizontalAlignment="Center" 
                                                                                                    VerticalAlignment="Top" 
                                                                                                    Click="BtnSearch_Click"/>

                                                                                            <!-- Refund List DataGrid -->
                                                                                            <Grid Grid.Row="1" x:Name="refundlist">
                                                                                                <DataGrid  IsReadOnly="True"
                                                                                                        x:Name="dgRefundList" 
                                                                                                        AutoGenerateColumns="False" 
                                                                                                        CanUserAddRows="False" 
                                                                                                        Margin="10,-15,20,0">
                                                                                                    <DataGrid.Columns>
                                                                                                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="Auto"/>
                                                                                                        <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat='Rs {0:N2}'}" Width="Auto"/>
                                                                                                        <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat='Rs {0:N2}'}" Width="Auto"/>
                                                                                                    </DataGrid.Columns>
                                                                                                </DataGrid>
                                                                                            </Grid>

                                                                                            <!-- Refund Button -->
                                                                                            <Button 
                                                                                                    Width="100" 
                                                                                                    Height="40"  
                                                                                                    Margin="50,90,10,10" 
                                                                                                    Content="Refund" 
                                                                                                    HorizontalAlignment="Left" 
                                                                                                    VerticalAlignment="Center" 
                                                                                                    Grid.Row="2"
                                                                                                    Click="BtnRefund_Click"/>
                                                                                        </Grid>

                                                                                        <!-- Right Column -->
                                                                                        <Grid Grid.Column="1" x:Name="allbillitems">
                                                                                            <DataGrid  IsReadOnly="True"
                                                                                                    x:Name="dgAllBillItems" 
                                                                                                    AutoGenerateColumns="False" 
                                                                                                    CanUserAddRows="False" 
                                                                                                    Margin="15,20,0,0" 
                                                                                                    SelectionMode="Single" 
                                                                                                    SelectionChanged="DgAllBillItems_SelectionChanged">
                                                                                                <DataGrid.Columns>
                                                                                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="Auto"/>
                                                                                                    <DataGridTextColumn Header="Price" Binding="{Binding Price,StringFormat='Rs {0:N2}'}" Width="Auto"/>
                                                                                                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount, StringFormat='Rs {0:N2}'}" Width="Auto"/>
                                                                                                </DataGrid.Columns>
                                                                                            </DataGrid>
                                                                                            <Grid Margin="150,380,0,0">
                                                                                                <Grid.ColumnDefinitions>
                                                                                                    <ColumnDefinition Width="Auto" />
                                                                                                    <ColumnDefinition Width="Auto" />
                                                                                                </Grid.ColumnDefinitions>

                                                                                                <TextBlock  
                                                                                                    Text="Refund Amount :" 
                                                                                                    FontSize="18" 
                                                                                                    FontWeight="Bold" 
                                                                                                    VerticalAlignment="Center" 
                                                                                                    HorizontalAlignment="Right" 
                                                                                                    Margin="0,0,10,0"/>

                                                                                                <TextBlock 
                                                                                                    x:Name="txtTotalRefundAmount" 
                                                                                                    Text="Rs 0.00" 
                                                                                                    FontSize="18" 
                                                                                                    FontWeight="Bold" 
                                                                                                    Grid.Column="1" 
                                                                                                    VerticalAlignment="Center" 
                                                                                                    HorizontalAlignment="Left" />
                                                                                            </Grid>

                                                                                        </Grid>
                                                                                    </Grid>
                                                                                </materialDesign:Card>

                                                                                <!-- Back Button -->
                                                                                <Button 
                                                                                        x:Name="backbutton1"  
                                                                                        Background="Transparent" 
                                                                                        BorderBrush="Transparent" 
                                                                                        Height="100" 
                                                                                        Width="120" 
                                                                                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" 
                                                                                        Margin="0" 
                                                                                        Grid.Row="1" 
                                                                                        HorizontalAlignment="Center" 
                                                                                        VerticalAlignment="Bottom" 
                                                                                        Click="BackButton_Click">
                                                                                    <Image Source="/Images/Back.png" Width="70" Height="70" Cursor="Hand"/>
                                                                                </Button>
                                                                            </Grid>
                                                                        </Grid>
                                                                    </materialDesign:DialogHost.DialogContent>



                                                                    <Grid>
                                                                        <!--Message box for History Button-->
                                                                        <materialDesign:DialogHost x:Name="HistoryButtonDialogHost" BorderBrush="{DynamicResource MaterialDesignDivider}">
