<UserControl x:Class="Saliya_auto_care_Cashier.MVC.View.QuantitySelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <Border Background="White" 
            BorderBrush="Gray" 
            BorderThickness="1" 
            CornerRadius="5"
            Padding="10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="DecreaseButton" 
                    Content="-"
                    Width="40" 
                    Height="40"
                    Click="DecreaseButton_Click"/>

            <Border Background="WhiteSmoke" 
                    Width="60" 
                    Height="40" 
                    Margin="5,0">
                <TextBlock x:Name="QuantityText" 
                          Text="1" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          FontSize="20"/>
            </Border>

            <Button x:Name="IncreaseButton" 
                    Content="+"
                    Width="40" 
                    Height="40"
                    Click="IncreaseButton_Click"/>
        </StackPanel>
    </Border>
</UserControl>
