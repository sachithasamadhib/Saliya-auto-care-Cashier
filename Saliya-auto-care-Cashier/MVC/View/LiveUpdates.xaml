<UserControl x:Class="Saliya_auto_care_Cashier.MVC.View.LiveUpdates"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Saliya_auto_care_Cashier.MVC.View"
             mc:Ignorable="d">
    <Grid>
        <Border Background="#F8F8F8" CornerRadius="12" Margin="5,4,150,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="&lt;" Foreground="#e05555" FontSize="35" Margin="15,-11,0,0" FontWeight="Bold" MouseDown="PreviousOffer_Click" Cursor="Hand" />
                <TextBlock x:Name="offertext" Text="Loading offers..." Foreground="#e05555" FontSize="20" Margin="0,0,0,0" FontWeight="Bold" Grid.Column="1" HorizontalAlignment="Center"/>
                <TextBlock Text="&gt;" Grid.Column="2" Foreground="#e05555" FontSize="35" Margin="0,-11,15,0" FontWeight="Bold" MouseDown="NextOffer_Click" Cursor="Hand" />
            </Grid>
        </Border>
    </Grid>
</UserControl>

